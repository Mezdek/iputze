{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "app",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@api/*": [
        "./api/*"
      ],
      "@constants": [
        "./constants/index"
      ],
      "@constants/*": [
        "./constants/*"
      ],
      "@helpers": [
        "./helpers/index"
      ],
      "@helpers/*": [
        "./helpers/*"
      ],
      "@lib": [
        "./lib/index"
      ],
      "@lib/*": [
        "./lib/*"
      ],
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}